{
  "title": "Users Service - Golden Signals",
  "uid": "users-gold",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Users Target Up",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        { "expr": "up{job=\"users\"}", "legendFormat": "users", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Requests / sec",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        { "expr": "sum(rate(users_http_requests_total[1m]))", "legendFormat": "RPS", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 Latency (s)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum(rate(users_http_request_duration_seconds_bucket[5m])) by (le))", "legendFormat": "p95", "refId": "A" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx / total)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        { "expr": "sum(rate(users_http_requests_total{http_status=~\"5..\"}[5m])) / sum(rate(users_http_requests_total[5m]))", "legendFormat": "error-rate", "refId": "A" }
      ]
    }
  ]
}